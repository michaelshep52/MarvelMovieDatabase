        public void CsvReader()
        {
            using(var reader = new StreamReader("MCUMovies.csv.rtf"))
            {
                List<string> ThorLoveAndThunder = new List<string>();
                List<string> SpiderManNoWayHome = new List<string>();
                List<string> ShangeChi = new List<string>();
                List<string> Thor = new List<string>();
                List<string> BlackPanther = new List<string>();
                List<string> GuardiansOfTheGalaxyVol2 = new List<string>();
                List<string> DoctorStange = new List<string>();
                List<string> CaptainMarvel = new List<string>();
                List<string> BlackWidow = new List<string>();
                List<string> TheAvengers = new List<string>();
                List<string> IronMan = new List<string>();
                List<string> IronMan2 = new List<string>();
                List<string> IronMan3 = new List<string>();
                List<string> GuardiansOfTheGalaxy = new List<string>();
                List<string> AntMan = new List<string>();
                List<string> AntManAndTheWasp = new List<string>();
                List<string> DoctorStangeInTheMultiverseOfMadness = new List<string>();
                List<string> AvengersInfinityWar = new List<string>();
                List<string> Eternals = new List<string>();
                List<string> AvengersEndgame = new List<string>();
                List<string> AvengersAgeOfUltron = new List<string>();
                List<string> ThorRagnarok = new List<string>();
                List<string> SpiderManHomecoming = new List<string>();
                List<string> CaptianAmericaCivilWar = new List<string>();
                List<string> ThorTheDarkWorld = new List<string>();
                List<string> SpiderManFarFromHome = new List<string>();
                List<string> CaptainAmericaTheFirstAvenger = new List<string>();
                List<string> TheIncredibleHulk = new List<string>();
                List<string> CaptainAmericaTheWinterSoldier = new List<string>();

                while (!reader.EndOfStream)
                {
                    var line = reader.ReadLine();
                    var values = line.Split(';');

                    ThorLoveAndThunder.Add(values[0]);
                    SpiderManNoWayHome.Add(values[1]);
                    ShangeChi.Add(values[2]);
                    Thor.Add(values[3]);
                    BlackPanther.Add(values[4]);
                    GuardiansOfTheGalaxyVol2.Add(values[5]);
                    DoctorStange.Add(values[6]);
                    CaptainMarvel.Add(values[7]);
                    BlackWidow.Add(values[8]);
                    TheAvengers.Add(values[9]);
                    IronMan.Add(values[10]);
                    IronMan2.Add(values[11]);
                    IronMan3.Add(values[12]);
                    GuardiansOfTheGalaxy.Add(values[13]);
                    AntMan.Add(values[14]);
                    AntManAndTheWasp.Add(values[15]);
                    DoctorStangeInTheMultiverseOfMadness.Add(values[16]);
                    AvengersInfinityWar.Add(values[17]);
                    Eternals.Add(values[18]);
                    AvengersEndgame.Add(values[19]);
                    AvengersAgeOfUltron.Add(values[20]);
                    ThorRagnarok.Add(values[21]);
                    SpiderManHomecoming.Add(values[22]);
                    CaptianAmericaCivilWar.Add(values[23]);
                    ThorTheDarkWorld.Add(values[24]);
                    SpiderManFarFromHome.Add(values[25]);
                    CaptainAmericaTheFirstAvenger.Add(values[26]);
                    TheIncredibleHulk.Add(values[27]);
                    CaptainAmericaTheWinterSoldier.Add(values[28]);
                }
            }
        }
